<%- include('../partials/head.ejs') %>

<div class="form-container login">
  <h1>Log In</h1>

  <div class="flash-messages">
    <% if (messages.success) { %>
      <% for (let msg of messages.success) { %>
        <p class="success"><%= msg %></p>
      <% } %>
    <% } %>
    <% if (messages.info) { %>
      <% for (let msg of messages.info) { %>
        <p class="info"><%= msg %></p>
      <% } %>
    <% } %>
    <% if (messages.error) { %>
      <% for (let msg of messages.error) { %>
        <p class="error"><%= msg %></p>
      <% } %>
    <% } %>
  </div>

  <form action="<%= baseUrl %>/login" method="post">

    <div class="form-group username">
      <label for="username">Username</label>
      <input class="form-control" type="text" name="username" id="username" placeholder="Enter username" />
    </div>

    <div class="form-group password">
      <label for="password">Password</label>
      <input class="form-control" type="password" name="password" id="password" placeholder="Enter password" />
    </div>

    <input class="btn btn-primary login-btn" type="submit" value="Login" />

    <div class="form-group">
      Don't have an account yet?
      <a href="/users/signup">Sign up here</a>
    </div>

  </form>
</div>
<%- include('../partials/footer.ejs') %>
