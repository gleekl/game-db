<%- include ('../partials/head.ejs') %>
<h3>Update <%= tabletop.name %></h3>
<form action="<%= baseUrl %>/<%= tabletop.id %>?_method=PUT" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="name">Name</label>
        <input class="form-control" type="text" name="name" id="name" value="<%= tabletop.name %>">
    </div>
    <div class="form-group">
        <label for="designers">Designers</label>
        <input class="form-control" type="text" name="designers" id="designers" value="<%= tabletop.designers %>">
    </div>
    <div class="form-group">
        <label for="publisher">Publisher</label>
        <input class="form-control" type="text" name="publisher" id="publisher" value="<%= tabletop.publisher %>">
    </div>
    <div class="form-group">
        <label for="year">Year</label>
        <input class="form-control" type="number" min="1900" max="2099" step="1" value="2022" name="year" id="year" value="<%= tabletop.year %>">
    </div>
    <div class="form-group">
        <label for="genre">Genre</label>
        <input class="form-control" type="text" name="genre" id="genre" value="<%= tabletop.genre %>"/>
    </div>
    <div class="form-group">
        <label for="img">Image</label>
        <input class="form-control" id="img" name="img" type="file" />
    </div>
    <div class="form-group">
        <label for="tags">Tags</label>
        <input class="form-control" type="text" name="tags" id="tags" value="<%= tabletop.tags %>">
    </div>
    <input type="submit" name="" id="" value="Update">
</form>
<%- include ('../partials/footer.ejs') %>